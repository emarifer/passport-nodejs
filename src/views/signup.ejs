<%- layout('layouts/main') %>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center rounded-lg">
            <div class="card-header">
                <h4>SignUp</h4>
            </div>
            <div class="card-body">
                <form action="<%= prefixApp %>/signup" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Insert Email…" autofocus>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Insert Password…">
                    </div>
                    <button class="btn btn-primary btn-block mt-4 rounded-lg" type="submit">
                        SignUp
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>